<section id="contact" class="section-padding">
    <div class="container">
        <h2>{{sections.contact.title}}</h2>
	{{#if sections.contact.intro}}<p class="section-intro">{{sections.contact.intro}}</p>{{/if}}
        
        <div class="contact-methods">
            {{#each contact}}
            <div class="contact-item">
                <span class="contact-label">
                    {{{feather this.icon width="18" height="18"}}} {{this.platform}}
                </span>

                {{#if this.isLink}}
                    <a href="{{this.link}}" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="contact-value {{this.cssClass}}">
                       {{this.value}}
                    </a>
                {{else}}
                    <span class="contact-value {{this.cssClass}}" aria-label="{{this.platform}}: {{this.value}}">
                        {{this.value}}
                    </span>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</section>
